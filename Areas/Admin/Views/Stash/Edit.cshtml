@using SquirrelTracker.Models.Stashes.Dto
@model StashDto

<!-- Main container for editing a stash -->
<div class="container mt-4">

    <!-- Page heading -->
    <h1>Edit Stash</h1>

    <!-- Form to edit stash details -->
    <form method="post" 
        asp-area="Admin" 
        asp-controller="Stash" 
        asp-action="Edit" 
        asp-route-id="@Model.Id">

        <!-- Field to update the stash location -->
        <div class="mb-3">
            <label for="Location" class="form-label">Location</label>
            <input asp-for="Location" type="text" class="form-control" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <!-- Buttons to save or go back -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-area="" asp-controller="Squirrel" asp-action="Stashes" asp-route-id="@Model.Squirrel.Id">Back</a>
    </form>
</div>
