@using SquirrelTracker.Models.Items.Dto
@model List<ItemDto>

@{
    ViewData["Title"] = "Add Item";
}

<!-- Table showing a list of all available items -->
<h4 class="mt-4">Available Items</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <!-- Column headers -->
            <th>Name</th>
            <th>Description</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Item name -->
                <td>@item.Name</td>
                <!-- Item description -->
                <td>@item.Description</td>
                <td>
                    <!-- Form to add this specific item to the stash -->
                    <form method="post" 
                        asp-area="Admin" 
                        asp-controller="Stash" 
                        asp-action="AddItem"
                        asp-route-stashId="@ViewBag.StashId" 
                        asp-route-itemId="@item.Id"
                          class="d-inline-flex align-items-center">
                        <!-- Input for how many to add -->
                        <input type="number" name="Quantity" class="form-control me-2" min="1" value="1" style="width:80px;" required />
                        <!-- Button to submit the add form -->
                        <button type="submit" class="btn btn-sm btn-outline-primary">Add</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-secondary" asp-area="" asp-controller="Stash" asp-action="Items" asp-route-id="@ViewBag.StashId">Back</a>
</div>
