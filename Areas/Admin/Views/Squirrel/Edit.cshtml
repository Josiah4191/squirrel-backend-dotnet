@using SquirrelTracker.Models.Squirrels.Dto
@model SquirrelUpdateDto

<!-- Main container for the page -->
<div class="container mt-4">

    <!-- Page heading -->
    <h1>Edit Squirrel</h1>

    <!-- Form to edit an existing squirrel -->
    <form method="post" asp-area="Admin" asp-controller="Squirrel" asp-action="Edit" asp-route-id="@Model.Id">

        <!-- Field to edit the squirrel's name -->
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Buttons to save or go back -->
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-area="" asp-controller="Squirrel" asp-action="Index">Back</a>
    </form>
</div>


